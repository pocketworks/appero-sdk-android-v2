<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ApperoSDKAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#00A0E4</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#D0E8F7</item>
        <item name="colorOnPrimaryContainer">#001F2A</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryContainer</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation bar (API 27+) -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Display cutout mode (API 27+) -->
        <!-- Ensures content is never drawn behind display cutouts (notches/punch holes) -->
        <item name="android:windowLayoutInDisplayCutoutMode">never</item>
    </style>
</resources>
